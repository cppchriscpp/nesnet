html
  head
    link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/readable/bootstrap.min.css", rel="stylesheet", integrity="sha384-Li5uVfY2bSkD3WQyiHX8tJd0aMF91rMrQP5aAewFkHkVSTT2TmD2PehZeMmm7aiL", crossorigin="anonymous")
    link(href="/static/index.css", rel="stylesheet")
    title NESNet Character Movement Demo
  body
    .container
      .header.clearfix
        nav
          //- ul.nav.nav-pills.pull-right
            li.active(role='presentation')
              a(href='#') Home
            li(role='presentation')
              a(href='#') About
            li(role='presentation')
              a(href='#') Contact
        h3.text-muted NESNet Character Movement Demo
      .jumbotron
        h1 Move Around!
        p.lead
          | Clicking below will move your character around. This movement will be represented on any NES console running NESNet.
        p
          .panel.panel-default.world
            .panel-body
              .character O
        p.pull-left
          | X: 
          span.positionX #{positionX}
        .clearfix
        p.pull-left
          | Y: 
          span.positionY #{positionY}

          //-a.btn.btn-lg.btn-success(href='#', role='button') Sign up today
      footer.footer

        script(src="https://code.jquery.com/jquery-3.2.1.min.js", type="text/javascript")
